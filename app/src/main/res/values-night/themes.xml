<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FastTransfer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:layout_width">@dimen/column_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="HeaderStyle" parent="BaseTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/header_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">-8dp</item>
    </style>

    <style name="InputFieldStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContentTextStyle" parent="BaseTextStyle">
        <item name="android:layout_marginTop">@dimen/header_padding</item>
    </style>

    <style name="ReviewHeaderStyle" parent="HeaderStyle">
        <item name="android:background">@drawable/rounded_header</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">32sp</item>
    </style>


    <style name="revHeaderTextStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/column_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="revDataTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/column_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/header_padding</item>
    </style>

    <style name="revArrowStyle">
        <item name="android:layout_width">@dimen/column_width</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/review_margin</item>
        <item name="android:layout_marginBottom">@dimen/review_margin</item>
        <item name="android:src">@drawable/arrow_icon</item>
    </style>

</resources>
