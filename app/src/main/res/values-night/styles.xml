<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Header Text Style for Night Mode -->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/header_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Input Field Style for Night Mode -->
    <style name="InputFieldStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_edittext_background_night</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>



</resources>
