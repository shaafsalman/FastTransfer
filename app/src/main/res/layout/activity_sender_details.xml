<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Header-->


    <!-- Sender Email -->

    <TextView
        android:id="@+id/tv_sender_details_header"
        style="@style/HeaderTextStyle"
        android:text="@string/sender_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_sender_email"
        style="@style/InputFieldStyle"
        android:autofillHints="ishaafsalman@gmail.com"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/tv_sender_details_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/grid_gap" />

    <!-- Sender Full Name -->
    <EditText
        android:id="@+id/et_sender_full_name"
        style="@style/InputFieldStyle"
        android:hint="@string/full_name"
        android:autofillHints="Shaaf Salman"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/et_sender_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/grid_gap" />

    <!-- Sender Contact -->
    <EditText
        android:id="@+id/et_sender_contact"
        style="@style/InputFieldStyle"
        android:autofillHints="+92 3174532990"
        android:hint="@string/contact_information"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/et_sender_full_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/grid_gap" />

    <!-- Sender Country -->
    <EditText
        android:id="@+id/et_sender_country"
        style="@style/InputFieldStyle"
        android:hint="@string/country"
        android:autofillHints="Pakistan"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/et_sender_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/grid_gap" />

    <!-- Sender Address -->
    <EditText
        android:id="@+id/et_sender_address"
        style="@style/InputFieldStyle"
        android:layout_marginTop="@dimen/grid_gap"
        android:autofillHints="Model Town"
        android:hint="@string/address"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_sender_country" />

    <!-- Next Button -->
    <Button
        android:id="@+id/btn_next_sender"
        style="@style/ButtonStyle"
        android:layout_width="299dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="@string/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_sender_address" />

</androidx.constraintlayout.widget.ConstraintLayout>
